                'unblock': 'type-unblock',
                'homework': 'type-homework'
            };
            return typeClasses[type] || 'type-custom';
        }

        function getTypeLabel(type) {
            const typeLabels = {
                'attendance': 'ÿ≠ÿ∂Ÿàÿ±',
                'payment': 'ÿØŸÅÿπ',
                'custom': 'ŸÖÿÆÿµÿµ',
                'block': 'ÿ≠ÿ∏ÿ±',
                'unblock': 'ÿ•ŸÑÿ∫ÿßÿ° ÿ≠ÿ∏ÿ±',
                'homework': 'Ÿàÿßÿ¨ÿ®'
            };
            return typeLabels[type] || type;
        }

        function getTypeIcon(type) {
            const typeIcons = {
                'attendance': 'fa-user-check',
                'payment': 'fa-credit-card',
                'custom': 'fa-bell',
                'block': 'fa-ban',
                'unblock': 'fa-unlock',
                'homework': 'fa-book'
            };
            return typeIcons[type] || 'fa-bell';
        }

        function formatDate(dateString) {
            if (!dateString) return '-';
            const date = new Date(dateString);
            return date.toLocaleString('ar-EG', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function updateStatistics(stats) {
            document.getElementById('totalNotifications').textContent = stats.total || 0;
            document.getElementById('attendanceCount').textContent = stats.attendance || 0;
            document.getElementById('paymentCount').textContent = stats.payment || 0;
            document.getElementById('blockCount').textContent = stats.block || 0;
        }

        function displayNotifications(notifications) {
            const container = document.getElementById('notificationsContainer');
            const emptyState = document.getElementById('emptyState');
            const paginationContainer = document.getElementById('paginationContainer');

            container.innerHTML = '';

            if (!notifications || notifications.length === 0) {
                container.style.display = 'none';
                emptyState.style.display = 'block';
                paginationContainer.style.display = 'none';
                return;
            }

            container.style.display = 'block';
            emptyState.style.display = 'none';

            notifications.forEach(notification => {
                const card = document.createElement('div');
                card.className = `notification-card ${getTypeClass(notification.type)}`;
                
                const studentName = notification.studentId?.Username || 'ÿ∫Ÿäÿ± ŸÖÿπÿ±ŸàŸÅ';
                const studentCode = notification.studentId?.Code || '-';
                
                card.innerHTML = `
                    <div class="notification-header">
                        <div class="notification-title">
                            <i class="fa-solid ${getTypeIcon(notification.type)}"></i>
                            ${notification.title}
                        </div>
                        <span class="notification-type ${getTypeBadgeClass(notification.type)}">
                            ${getTypeLabel(notification.type)}
                        </span>
                    </div>
                    <div class="notification-body">
                        ${notification.body}
                    </div>
                    <div class="notification-footer">
                        <div class="notification-meta">
                            <span class="meta-item">
                                <i class="fa-solid fa-user"></i>
                                ${studentName}
                            </span>
                            <span class="meta-item">
                                <i class="fa-solid fa-id-card"></i>
                                ${studentCode}
                            </span>
                            <span class="meta-item">
                                <i class="fa-solid fa-phone"></i>
                                ${notification.parentPhone || '-'}
                            </span>
                        </div>
                        <div class="notification-date">
                            <i class="fa-solid fa-clock"></i>
                            ${formatDate(notification.createdAt)}
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        async function loadNotifications() {
            const loadingSpinner = document.getElementById('loadingSpinner');
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');
            const container = document.getElementById('notificationsContainer');

            loadingSpinner.style.display = 'block';
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';
            container.style.display = 'none';

            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const typeFilter = document.getElementById('typeFilter').value;
            const searchPhone = document.getElementById('searchPhone').value;

            const params = new URLSearchParams();
            if (startDate) params.append('startDate', startDate);
            if (endDate) params.append('endDate', endDate);
            if (typeFilter) params.append('type', typeFilter);
            if (searchPhone) params.append('phone', searchPhone);
            params.append('page', currentPage);
            params.append('limit', perPage);

            try {
                const [notificationsRes, statsRes] = await Promise.all([
                    fetch(`/teacher/allNotifications/getNotifications?${params.toString()}`),
                    fetch(`/teacher/allNotifications/getStats?${params.toString()}`)
                ]);

                const notificationsResult = await notificationsRes.json();
                const statsResult = await statsRes.json();

                loadingSpinner.style.display = 'none';

                if (notificationsResult.success) {
                    displayNotifications(notificationsResult.data);
                    
                    if (statsResult.success) {
                        updateStatistics(statsResult.data);
                    }

                    if (notificationsResult.pagination) {
                        currentPage = notificationsResult.pagination.currentPage;
                        totalPages = notificationsResult.pagination.totalPages;
                        updatePagination(notificationsResult.pagination);
                        document.getElementById('paginationContainer').style.display = 'flex';
                    }

                    document.getElementById('successText').textContent = 'ÿ™ŸÖ ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™ ÿ®ŸÜÿ¨ÿßÿ≠';
                    successMessage.style.display = 'flex';
                    setTimeout(() => {
                        successMessage.style.display = 'none';
                    }, 3000);
                } else {
                    document.getElementById('errorText').textContent = notificationsResult.message || 'ŸÅÿ¥ŸÑ ŸÅŸä ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™';
                    errorMessage.style.display = 'flex';
                    document.getElementById('emptyState').style.display = 'block';
                }
            } catch (error) {
                loadingSpinner.style.display = 'none';
                document.getElementById('errorText').textContent = 'ÿ≠ÿØÿ´ ÿÆÿ∑ÿ£ ÿ£ÿ´ŸÜÿßÿ° ÿ™ÿ≠ŸÖŸäŸÑ ÿßŸÑÿ•ÿ¥ÿπÿßÿ±ÿßÿ™: ' + error.message;
                errorMessage.style.display = 'flex';
            }
        }

        function updatePagination(pagination) {
            const paginationInfo = document.getElementById('paginationInfo');
            const prevBtn = document.getElementById('prevPageBtn');
            const nextBtn = document.getElementById('nextPageBtn');

            paginationInfo.textContent = `ÿµŸÅÿ≠ÿ© ${pagination.currentPage} ŸÖŸÜ ${pagination.totalPages} (ÿ•ÿ¨ŸÖÿßŸÑŸä: ${pagination.total})`;

            prevBtn.disabled = pagination.currentPage <= 1;
            nextBtn.disabled = pagination.currentPage >= pagination.totalPages;
        }

        function changePage(direction) {
            if (direction === -1 && currentPage > 1) {
                currentPage--;
                loadNotifications();
            } else if (direction === 1 && currentPage < totalPages) {
                currentPage++;
                loadNotifications();
            }
        }

        function resetFilters() {
            document.getElementById('startDate').value = '';
            document.getElementById('endDate').value = '';
            document.getElementById('typeFilter').value = '';
            document.getElementById('searchPhone').value = '';
            currentPage = 1;
            loadNotifications();
        }
    </script>
